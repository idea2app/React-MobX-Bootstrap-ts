{
    "name": "react-mobx-bootstrap-ts",
    "version": "0.3.0",
    "description": "React project scaffold based on TypeScript, MobX & Bootstrap, which is inspired by WebCell scaffold.",
    "author": "shiy2008@gmail.com",
    "dependencies": {
        "browser-unhandled-rejection": "^1.0.2",
        "iterable-observer": "^1.0.0-beta.5",
        "koajax": "^0.6.4",
        "mobx": "^5.15.7",
        "mobx-react": "^6.3.1",
        "react": "^17.0.1",
        "react-bootstrap": "^1.4.3",
        "react-bootstrap-editor": "^0.4.0",
        "react-dom": "^17.0.1",
        "react-router-dom": "^5.2.0",
        "web-utility": "^2.4.4"
    },
    "devDependencies": {
        "@octokit/openapi-types": "^4.0.1",
        "@types/react": "^17.0.0",
        "@types/react-dom": "^17.0.0",
        "@types/react-router-dom": "^5.1.7",
        "autoprefixer": "^9.8.6",
        "husky": "^4.3.8",
        "less": "^4.1.1",
        "lint-staged": "^10.5.4",
        "parcel-bundler": "^1.12.4",
        "postcss-modules": "^3.2.2",
        "prettier": "^2.2.1",
        "typescript": "^4.1.3",
        "workbox-cli": "^6.1.0"
    },
    "prettier": {
        "singleQuote": true,
        "trailingComma": "none",
        "arrowParens": "avoid",
        "tabWidth": 4
    },
    "lint-staged": {
        "*.{html,md,less,json,yml,js,ts,tsx}": "prettier --write"
    },
    "postcss": {
        "modules": true,
        "plugins": {
            "autoprefixer": {
                "grid": true
            }
        }
    },
    "scripts": {
        "test": "lint-staged",
        "start": "parcel src/index.html --open",
        "pack": "parcel build src/index.html --public-url .",
        "build": "rm -rf dist/  &&  npm run pack  &&  workbox generateSW"
    },
    "husky": {
        "hooks": {
            "pre-commit": "npm test",
            "pre-push": "npm run build"
        }
    }
}
