        "react": "^17.0.2",
        "react-bootstrap": "^2.3.0",
        "react-bootstrap-editor": "^1.0.0-rc.5",
        "react-dom": "^17.0.2",
        "react-editor-js": "^2.0.6",
        "react-router-class-tools": "^0.1.2",
        "react-router-dom": "^6.3.0",
        "web-utility": "^3.6.4"
    },
    "devDependencies": {
        "@octokit/openapi-types": "^11.2.0",
